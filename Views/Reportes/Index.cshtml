@model IEnumerable<Bookflix.Models.Reportes>

@{
    ViewData["Title"] = "Reportes";
    ViewBag.Libro = null;
}

<h1 style="color: #E50914;">Tabla de Comentarios Reportados</h1>

<table class="table">
    <thead>
        <tr>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th style="color: white;">
                Título del libro
            </th>
            <th style="color: white;">
                Autor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        ViewBag.Libro = @item.obtenerLibro();
        <tr>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Motivo)
            </td >
            <td style="color: white;">
                @ViewBag.Libro.Titulo
            </td >
            <td style="color: white;">
                @ViewBag.Libro.Autor.Nombre
            </td >
            <td>
                <a class="btn btn-danger" role="button" asp-action="Details" asp-route-id="@item.Id">Ver más</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if(Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        ¡No se han realizado reportes hasta el momento!
    </div>
}
