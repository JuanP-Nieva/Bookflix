@model Bookflix.Models.Reportes

@{
    ViewData["Title"] = "Create";
}

<h4> Escribenos tu reporte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="LibroId" value="@ViewBag.IdLibro" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="NumeroComentario" value="@ViewBag.NroComentario" />
            </div>
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <input asp-for="Motivo" class="form-control" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                 <a class="btn btn-primary" role="button" asp-controller="Libro" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
