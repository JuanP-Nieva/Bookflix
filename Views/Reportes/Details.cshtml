@model Bookflix.Models.Perfil_Comenta_Libro
@{
    ViewData["Title"] = "Reporte";
}

<h1 style="color: white;">Detalles del Comentario</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="color: white;">
            @Html.DisplayNameFor(model => model.Comentario)
        </dt>
        <dd class = "col-sm-10" style="color: white;">
            @Html.DisplayFor(model => model.Comentario)
        </dd>
        <dt class = "col-sm-2" style="color: white;">
            Motivo
        </dt>
        <dd class = "col-sm-10" style="color: white;">
            @ViewBag.Motivo
        </dd>
    </dl>
</div>
<div>
    <form asp-controller="Reportes" asp-action="Delete" method="post">
                            <input type="hidden" name="id" id="id" value="@Model.LibroId"/>
                            <input type="hidden" name="nro" id="nro" value="@Model.NumeroComentario"/>
                            <button type="submit" class="btn btn-primary mb-2">Borrar Comentario</button>
    </form>
    <a class="btn btn-danger" role="button" asp-controller="Reportes" asp-action="Index">Volver</a>
</div>
