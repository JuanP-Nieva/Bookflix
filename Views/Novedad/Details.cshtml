@model Bookflix.Models.Novedad

@{
    ViewData["Title"] = "Novedad";
    string path = Model.Imagen;
}

<h1 style="color: aliceblue;">@Html.DisplayFor(model => model.Titulo)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="color: #E50914;">
            <a>@Html.DisplayNameFor(model => model.Imagen):</a>
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Images/@path" width="360" height="360" asp-append-version="true"/>
        </dd>
        <dt class = "col-sm-2" style="color: #E50914">
            <a>@Html.DisplayNameFor(model => model.Descripcion):</a>
        </dt>
        <dd class = "col-sm-10" style="color: #F5F5F1;">
            <a>@Html.DisplayFor(model => model.Descripcion)</a>
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Administrador")){
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit | </a> 
    }
    <a asp-action="Index">Regresar a novedades</a>
</div>