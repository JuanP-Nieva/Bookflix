@model IEnumerable<Bookflix.Models.Novedad>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: #E50914;">Novedades</h1>

@if (User.IsInRole("Administrador")){
    <p>
          <a class="btn btn-danger" role="button" asp-action="Create">Crear Novedad</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                <a style="color: white;">@Html.DisplayNameFor(model => model.Titulo)</a>
            </th>
            <th>
                <a style="color: white;">@Html.DisplayNameFor(model => model.Imagen)</a>
            </th>
            <th>
                <a style="color: white;">@Html.DisplayNameFor(model => model.Descripcion)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a style="color: white;">@Html.DisplayFor(modelItem => item.Titulo)</a>
            </td>
            <td>
                <img src="~/Images/@item.Imagen" class="rounded-circle" width="40" height="40" asp-append-version="true"/>
            </td>
            <td>
                <a style="color: white;">@Html.DisplayFor(modelItem => item.Descripcion)</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Ver m√°s</a>
                @if (User.IsInRole("Administrador"))
                {
                     <a asp-action="Edit" asp-route-id="@item.Id">| Editar </a> 
                     @* <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a> *@
                }
            </td>
        </tr>
}
    </tbody>
</table>




