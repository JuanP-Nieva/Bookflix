@* @model Bookflix.Models.Libro *@
@model Bookflix.ViewModel.LibroViewModel
@{
    ViewData["Title"] = "Crear Libro";
}

<h1 style="color: #E50914;">Crear Libro</h1>

<hr />
<div>
    <a class="btn btn-primary" role="button" asp-controller="Autor" asp-action="Create">Crear Autor</a>
    <a class="btn btn-primary" role="button" asp-controller="Genero" asp-action="Create">Crear Genero</a>
    <a class="btn btn-primary" role="button" asp-controller="Editorial" asp-action="Create">Crear Editorial</a>
</div>
<br>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label" style="color: #F5F5F1;"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Portada" class="control-label" style="color: #F5F5F1;"></label>
                <input asp-for="Portada" class="form-control" />
                <span asp-validation-for="Portada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label" style="color: #F5F5F1;"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contenido" class="control-label" style="color: #F5F5F1;"></label>
                <input asp-for="Contenido" class="form-control" />
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label" style="color: #F5F5F1;"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label" style="color: #F5F5F1;"></label>
                <select asp-for="AutorId" class ="form-control" asp-items="ViewBag.AutorId"></select>
                <span asp-validation-for="AutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label" style="color: #F5F5F1;"></label>
                <select asp-for="GeneroId" class ="form-control" asp-items="ViewBag.GeneroId"></select>
                <span asp-validation-for="GeneroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Editorial" class="control-label" style="color: #F5F5F1;"></label>
                <select asp-for="EditorialId" class ="form-control" asp-items="ViewBag.EditorialId"></select>
                <span asp-validation-for="EditorialId" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-primary" role="button" asp-controller="Libro" asp-action="Index" >Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
