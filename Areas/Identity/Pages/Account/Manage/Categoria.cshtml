@page
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Categoria;
}
@if(User.IsInRole("Normal"))
{
    <h4 style="color: #F5F5F1;">¡Pasate a Premium!</h4>
    <div class="row">
        <div class="col-md-6">
            <p style="color: #F5F5F1;">Mediante el siguiente botón, pasarás a tener una cuenta premium. Esto te permitirá tener un máximo de 4 perfiles en vez de 2.
            </p>   	

            <td><button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#exampleModal">
                Pasar a Premium
                </button>
            </td>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Subir categoría</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Al confirmar la operación indicas estar de acuerdo con los términos y condiciones</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Manage/SubirCategoria">
                            <button type="submit" class="btn btn-danger submit" >Confirmar</button>                 
                        </form>
                    </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
else
{
    <h4 style="color: #F5F5F1;">Baja a normal</h4>
    <div class="row">
        <div class="col-md-6">
            <p style="color: #F5F5F1;">Para bajar de categoría deberás presionar el siguiente botón. Se te permitirá tener un máximo de 2 perfiles. De tener más, deberás borrarlo.</p>   	
            

            <td><button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#exampleModal">
                Pasar a Normal
                </button>
            </td>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Bajar categoría</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Al confirmar la operación indicas estar de acuerdo con los términos y condiciones</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Manage/BajarCategoria">
                            <button type="submit" class="btn btn-danger submit" >Confirmar</button>                 
                        </form>
                    </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}