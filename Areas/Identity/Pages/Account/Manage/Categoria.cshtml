@page
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Categoria;
}
@if(User.IsInRole("Normal"))
{
    <h4 style="color: #F5F5F1;">Sos normal</h4>
    <div class="row">
        <div class="col-md-6">
            <p style="color: #F5F5F1;">Sos normal</p>   	
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Manage/SubirCategoria">
                <button type="submit" class="btn btn-success submit" >Pasar a Premium</button>                 
            </form>
        </div>
    </div>
}
else
{
    <h4 style="color: #F5F5F1;">sos premium</h4>
    <div class="row">
        <div class="col-md-6">
            <p style="color: #F5F5F1;">Sos premium</p>   	
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Manage/BajarCategoria">
                <button type="submit" class="btn btn-success submit" >Pasar a Normal</button>                 
            </form>
        </div>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}